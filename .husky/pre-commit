#!/bin/sh

# Get list of staged files that can be formatted
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|jsonc|css|scss|md)$' || true)

# Exit if no relevant staged files
if [ -z "$STAGED_FILES" ]; then
  exit 0
fi

# Format only the staged files (use local version for reproducibility)
npx ultracite format $STAGED_FILES

# Add back only the formatted staged files
git add $STAGED_FILES